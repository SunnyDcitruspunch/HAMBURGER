
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="./lib/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap"
          rel="stylesheet" />
    <link href="~/Content/sign.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div id="bg"></div>
    <div id="title">
        <h3>Hamburger Order Table</h3>
        <img src="~/Content/hamburger.gif" alt="burger" style="height: 100px" />
        <img src="~/Content/hamburger.gif" alt="burger" style="height: 100px" />
        <img src="~/Content/hamburger.gif" alt="burger" style="height: 100px" />
        <img src="~/Content/hamburger.gif" alt="burger" style="height: 100px" />
    </div>
    <div id="card" style="overflow-x:auto;">
        <table>
            <tr>
                <th>Customer Name</th>
                <th>Total Ordered Hamburger</th>
                <th>Action</th>
            </tr>
            <tbody>
                @foreach (var aCustomer in ViewBag.descCustomers)
                {
                    <tr>
                        <td>@aCustomer.Key</td>
                        <td>@aCustomer.Value</td>
                        <td><button for='coupon' class='coupon' onclick='changeText()'>Send Coupon</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

<script>
    function sort() {

    }
</script>


<style>
    body {
        height: 100vh;
        width: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-family: "Montserrat";
        background-color: white;
    }

    div#title {
        text-align: center;
        padding-bottom: 20px;
        margin-top: 20px;
    }

    #card {
        position: relative;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 13px;
    }

        #card:hover {
            box-shadow: 0 8px 14px 0 rgba(0,0,0,0.2);
        }

    table {
        background-color: white;
        position: relative;
        table-layout: fixed;
        z-index: 10;
        width: 100%;
    }

    td, th {
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        height: 50px;
        background-color: lightgray;
        font-size: 20px;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .img {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }

    .sort {
        position: absolute;
        margin-bottom:100px;
        right: 250px;
        width: 80px;
        height: 40px;
    }

    button {
        border-radius: 12px;
        background-color: white;
        border: 2px solid grey;
        color: black;
        padding: 10px 6px;
    }

        button:hover {
            box-shadow: 0 2px 3px 0 rgba(0,0,0,0.2);
        }

    a {
       text-decoration: none;
       color: black;
    }

    a:hover {
        text-decoration: none;
    }
</style>
